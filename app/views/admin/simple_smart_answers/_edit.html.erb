<%= semantic_form_for @resource, :url => admin_edition_path(@resource), :as => :edition do |f| %>
  <%= f.inputs do %>
    <%= render :partial => 'admin/shared/title_etc', :locals => {:f => f} %>
    <%= f.input :body, :as => :text, :input_html => { :class => 'span12', :rows => 5, :disabled => @resource.published? } %>
  <% end %>

  <%= f.inputs "Smart Answer" do %>
    <%= render :partial => 'admin/simple_smart_answers/builder', :locals => {:f => f} %>
  <% end %>
<% end %>

<% content_for :extra_javascript do %>
  <%= javascript_include_tag(
    "smart-answer-builder/main.js",
    "smart-answer-builder/node.js",
    "smart-answer-builder/nodes.js",
    "smart-answer-builder/option.js") %>
<% end %>

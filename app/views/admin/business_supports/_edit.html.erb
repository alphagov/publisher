<%= semantic_form_for @resource, :url => admin_edition_path(@resource), :as => :edition do |f| %>
  <div class="row-fluid">


    <div class="span8">
    <%= f.inputs do %>
      <%= render :partial => 'admin/shared/title_etc', :locals => {:f => f} %>
      <%= render :partial => 'admin/business_supports/fields', :locals => { :f => f, :published => @resource.published? } %>
    <% end %>
    </div>
    <div class="span4">
      <h3>Govspeak help</h3>

      <div class="well">
        <%= render "../shared/markdown_help" %>
      </div>
    </div>
  </div>

<% end %>

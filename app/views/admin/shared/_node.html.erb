<fieldset class='form-horizontal'>

  <%= f.input :level,
              :as => :select,
              :collection => ["country","city","comms"],
              :include_blank => 'Please select',
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :beta,
              :as => :boolean,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :region,
              :as => :select,
              :collection => country_options_for_select,
              :include_blank => 'Please select',
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>
        
  <%= f.input :area,
              :label => 'Area / City',
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>
       
  <%= f.input :latlng,
              :label => 'Location',
              :hint => 'Latitude, Longitude',
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :host,
              :label => 'Host organisation',
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>
              
  <%= f.input :join_date,
              :label => 'Join date',
              :input_html => { :class => 'span7' , :disabled => @resource.published?, :type  => "date" } %>
  
  <%= render partial: 'admin/shared/markdown_field', locals: { type: :description, form: f, :required => true }%>

  <%= f.input :telephone,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :email,
              :as => :email,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :url,
              :as => :url,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :twitter,
              :prepend => '@',
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :linkedin,
              :as => :url,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :active,
              :label => 'Active?',
              :as => :boolean,
              :input_html => { :disabled => @resource.published? } %>

  <%= render partial: 'admin/shared/asset_with_metadata', locals: { attribute: :logo, description: "logo", resource: @resource, form: f, required: false }%>

</fieldset>

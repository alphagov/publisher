<%= semantic_form_for(:activity, url: url, html: {class: 'button_to also_save_edition modal hide fade', id: id}) do |f| %>

  <div class="modal-header">
    <h3>Send to <%= title %></h3>
  </div>

  <div class="modal-body">

    <%= f.inputs do %>
      <input type="hidden" value="<%= activity %>" name="activity[request_type]">

      <%= f.input :comment, :as => :text, :input_html => { :class => 'span12', :cols => 60, :rows => 6 } %>

      <% if title == "Fact check" %>
        <%= f.input :email_addresses, :input_html => { :class => 'span12' } %>

        <label id="activity_customised_message_input" for="activity_customised_message">Customised message<abbr title="required">*</abbr></label>
        <textarea rows="6" name="activity[customised_message]" id="activity_customised_message" cols="60" class="span12">
          <%- @edition = @resource %>
<%= render :template => 'noisy_workflow/request_fact_check', formats: [:text] %>
        </textarea>
      <% end %>

    <% end %>
  </div>

  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <input class="btn btn-success" name="commit" type="submit" value="Send">
  </div>
<% end %>

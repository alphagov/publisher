<%= form.inputs "#{description.capitalize} file" do %>
  <% if resource.send(attribute) %>
    <div class="uploaded-<%= description %>">
      <h4>Current <%= description %></h4>
      <p><%= link_to resource.send(attribute).name, resource.send(attribute).file_url %></p>
      <p><%= label_tag do %>Remove <%= description %>? <%= check_box_tag "edition[remove_#{attribute}]", "1" %><% end %></p>
    </div>

    <h4>Replace <%= description %></h4>
  <% end %>

  <p><%= form.input attribute, :as => :file, :label => "Upload a new #{description}" %></p>
<% end %>

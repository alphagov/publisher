<form method="GET" action="<%= action %>" class="string-filter-form">
  <% preserve.each do |param| %>
  <%= hidden_field_tag param, params[param] %>
  <% end %>
  <label for="string_filter" class="visuallyhidden">Filter</label>
  <%= text_field_tag "string_filter", params[:string_filter], class: "span12", type: "search" %>
  <input class="btn btn-primary" type="submit" value="Filter">
</form>

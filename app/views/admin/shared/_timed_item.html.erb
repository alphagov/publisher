<fieldset class='form-horizontal'>
  
  <%= render partial: 'admin/shared/markdown_field', locals: { type: :content, form: f, :required => true }%>
          
  <%= f.input :end_date,
              :input_html => { :class => 'span7' , :disabled => @resource.published?, 'data-behaviour' => 'datepicker', :value => @resource.end_date.try(:strftime, "%Y-%m-%d") } %>
              
</fieldset>

<% content_for :extra_javascript do %>
  <script type="text/javascript">
    jQuery(document).ready(function($){
      jQuery('[data-behaviour~=datepicker]').datepicker({
        format: "yyyy-mm-dd"
      });
    })
  </script>
<% end %>
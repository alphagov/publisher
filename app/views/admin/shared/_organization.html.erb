<fieldset class='form-horizontal'>

  <%= render partial: 'admin/shared/markdown_field', locals: { type: :description, form: f, :required => true }%>

  <%= f.input :tagline,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :joined_at,
              :input_html => { :class => 'span7' , :disabled => @resource.published?, 'data-behaviour' => 'datepicker', :value => @resource.joined_at.try(:strftime, "%Y-%m-%d") } %>

  <%= f.input :involvement,
              :as => :text,
              :input_html => { :class => 'span7', :rows => '5', :disabled => @resource.published? } %>
              
  <%= f.input :want_to_meet,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>
                          
  <%= f.input :case_study,
              :as => :text,
              :input_html => { :class => 'span7' , :rows => '10', :disabled => @resource.published? } %>

  <%= render partial: 'admin/shared/asset', locals: { attribute: :logo, description: "logo", resource: @resource, form: f }%>
  
</fieldset>

<fieldset class='form-horizontal'>

  <legend>Contact Details</legend>
  
  <%= f.input :url,
              :label => "Website",
              :as => :url,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>  

  <%= f.input :telephone,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :email,
              :as => :email,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

  <%= f.input :twitter,
              :prepend => "@",
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>
              
  <%= f.input :linkedin,
              :as => :url,
              :input_html => { :class => 'span7' , :disabled => @resource.published? } %>

</fieldset>

<% content_for :extra_javascript do %>
  <script type="text/javascript">
    jQuery(document).ready(function($){
      jQuery('[data-behaviour~=datepicker]').datepicker({
        format: "yyyy-mm-dd"
      });
    })
  </script>
<% end %>
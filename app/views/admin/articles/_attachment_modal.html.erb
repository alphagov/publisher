<div id="attachment-modal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Attachment Metadata</h3>
  </div>
  <div class="modal-body">
    <div class="row-fluid">
      <div class="span6">
        <form class="form-horizontal">
          <input type="hidden" name="_method" value="put">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

          <%- (AttachableWithMetadata::ATTACHMENT_METADATA_FIELDS - [:spatial, :subject]).each do |field| %>
            <div class="control-group">
              <%= label_tag "attachment_file_#{field}", nil, :class => "control-label" %>
              <div class="controls">
                <%= text_field_tag "attachment[file_#{field}]" %>
              </div>
            </div>
          <% end %>

          <div class="control-group">
            <div class="controls">
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </form>
      </div>
      <div class="span6">
        <div class="row-fluid" style="margin-bottom: 15px">
          <div id="alignment-buttons" class="btn-group">
            <button class="btn" data-alignment="img pull-left">Left</button>
            <button class="btn" data-alignment="img text-center">Middle</button>
            <button class="btn" data-alignment="img pull-right">Right</button>
          </div>
        </div>
        <div class="row-fluid">
          <div id="markdown-snippet" class="well">
            <span class="snippet"></span><%= clippy("the image snippet will go here", "#333").html_safe %>
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
  </div>
</div>

<div class="part group">
  <h3><a href=#"><%= f.object.title %></a></h3>
  <%= f.inputs do %>
    <%= f.input :title, :input_html => { :class => 'title', :disabled => true }, :required => true %>
    <%= f.input :body, :as => :text, :required => true, :input_html => {:disabled => @resource.published?} %>
    <%= f.input :slug, :input_html => { :class => 'slug', :disabled => true }, :required => true %>
    <%= f.input :order, :as => :hidden, :input_html => { :class => 'order', :disabled => true } %>
  <% end %>
</div>

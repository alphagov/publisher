<h2>Viewing Edition <%= @latest_edition.version_number %> of &ldquo;<%= @programme.title %>&rdquo;</h2>
<p>Status: <%= @latest_edition.latest_action %></p>

<% if @latest_edition.in_review? %>
  <%= render 'review' %>
<% end %>

<div id="programme-controls">
  <!-- <p><a href="#" class="external">Formatting help</a></p> -->
  <span class="workflow_buttons">

  <% if @latest_edition.is_published? %>
    Published programmes can't be changed.
    <%= preview_button(@latest_edition) %>
    <%= button_to 'Create new edition', admin_programme_editions_path(@programme) %>
  <% else %>
    <!-- Fake save button -->
    <form id="save-edition" class="button_to">
    <input type="submit" value="Save" class="update">
    </form>
    <%= progress_buttons(@programme, @latest_edition) %>
    <%= preview_button(@latest_edition) %>
  <% end %>
  </span>
    <%= progress_forms(@programme, @latest_edition) %>
</div>

<div id="programme-nav" class="publication-nav">
  <ul>
    <li><a href="#edit">Edit</a></li>
    <li><a href="#metadata">Metadata</a></li>
    <li><a href="#history">History</a></li>
  </ul>
  <div id="edit">
    <%= render '/admin/programmes/edit' %>
  </div>
  <div id="metadata">
    <%= render :partial => '/admin/shared/metadata', :locals => {:publication => @programme} %>
  </div>
  <div id="history">
    <%= render :partial => '/admin/shared/history', :locals => {:publication => @programme} %>
  </div>
</div>

<% content_for :extra_javascript, javascript_include_tag('/guide-assets/javascripts/publications', '/guide-assets/javascripts/programmes') %>

<%= render partial: "editions/secondary_nav_tabs/edit/editable/components/title", locals: { edition: @resource } %>

<%= render partial: "editions/secondary_nav_tabs/edit/editable/components/meta_tag_description", locals: { edition: @resource } %>

<%= render partial: "editions/secondary_nav_tabs/edit/editable/components/guide_chapter_list", locals: { edition: @resource } %>

<%= render "govuk_publishing_components/components/button", {
  text: "Add a new chapter",
  secondary_solid: true,
  href: new_edition_guide_part_path(edition),
  margin_bottom: 6,
} %>

<%= render "govuk_publishing_components/components/radio", {
  heading: "Is every chapter part of a step by step?",
  heading_size: "s",
  heading_level: 0,
  name: "edition[hide_chapter_navigation]",
  inline: true,
  hint: "The chapter navigation will be hidden if they all are",
  items: [
    {
      value: 1,
      text: "Yes",
      checked: edition.hide_chapter_navigation,
    },
    {
      value: 0,
      text: "No",
      checked: !edition.hide_chapter_navigation,
    },
  ],
} %>

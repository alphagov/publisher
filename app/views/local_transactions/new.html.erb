<div class="page-header">
  <h1>New Local Transaction</h1>
</div>
<p class="alert alert-info">
  We need a bit more information to create your local transaction.
</p>

<% if @publication.errors.any? %>
  <p class="alert alert-danger">
    Errors: <%= @publication.errors.full_messages.uniq.to_sentence %>
  </p>
<% end %>

<%= semantic_form_for(@publication, :url => editions_path, :as => :edition, :html => { :id => 'edition-form' } ) do |f| %>
  <%= f.inputs :lgsl_code %>
  <%= f.inputs do %>
    <input type="hidden" name="edition[kind]" value="local_transaction">
    <%= f.input :panopticon_id, :as => :hidden %>
    <%= f.input :title, :as => :hidden %>
    <%= f.input :slug, :as => :hidden %>
  <% end %>
  <%= f.actions do %>
    <%= f.submit "Create Local transaction edition", class: 'btn btn-success' %>
  <% end %>
<% end %>

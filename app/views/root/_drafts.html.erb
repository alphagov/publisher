<%# @presenter.draft[0].to_json %>

<div class="mainstream-table" data-module="mainstream-table">
  <p class="govuk-heading-m govuk-!-margin-bottom-3 mainstream-table__heading">50 documents</p>

  <%= render "govuk_publishing_components/components/table", {
    head: [
      {
        text: "Title"
      },
      {
        text: "Updated"
      },
      {
        text: "Assigned to"
      },
      {
        text: "Status"
      }
    ],
    rows: @presenter.draft.map do |row|
      [
        {
          text: row.title
        },
        {
          text: row.updated_at.to_s
        },
        {
          text: row.assignee.to_s
        },
        {
          text: 'Draft'
        }
      ]
    end
  } %>
</div>

<table class="table table-striped table-bordered table-condensed" summary="List of &ldquo;Draft&rdquo; content">
  <thead>
    <tr class="table-header">
      <th scope="col"><%= sortable "_type", "Format" %></th>
      <th scope="col"><%= sortable "title" %></th>
      <th scope="col"><%= sortable "updated_at", "Updated" %></th>
      <th scope="col"><%= sortable "assignee", "Assigned to" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render :collection => @presenter.draft, :partial => 'publication', :locals => {:tab => :draft} %>
  </tbody>
</table>

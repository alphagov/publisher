<%= f.hidden_field :artefact_id %>

<%= render :partial => 'shared/error_summary', locals: { object: @downtime} %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half">
        <%= render "govuk_publishing_components/components/fieldset", {
          legend_text: "From date",
          heading_size: "m"
        } do %>
          <%= render "govuk_publishing_components/components/date_input", {
            hint: "For example, 01 08 2022",
            items: [
              {
                name: "downtime[start_time(3i)]",
                label: "Day",
                width: 2
              },
              {
                name: "downtime[start_time(2i)]",
                label: "Month",
                width: 2
              },
              {
                name: "downtime[start_time(1i)]",
                label: "Year",
                width: 4
              }
            ]
          } %>
        <% end %>
      </div>
      <div class="govuk-grid-column-one-half">
        <%= render "govuk_publishing_components/components/fieldset", {
          legend_text: "From time",
          heading_size: "m"
        } do %>
          <%= render "time_input", {
            hint: "For example, 9:30 or 19:30",
            items: [
              {
                name: "downtime[start_time(4i)]",
                label: "Hour",
                width: 2
              },
              {
                name: "downtime[start_time(5i)]",
                label: "Minute",
                width: 2
              }
            ]
          } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half">
        <%= render "govuk_publishing_components/components/fieldset", {
          legend_text: "To date",
          heading_size: "m"
        } do %>
          <%= render "govuk_publishing_components/components/date_input", {
            hint: "For example, 01 08 2022",
            items: [
              {
                name: "downtime[end_time(3i)]",
                label: "Day",
                width: 2
              },
              {
                name: "downtime[end_time(2i)]",
                label: "Month",
                width: 2
              },
              {
                name: "downtime[end_time(1i)]",
                label: "Year",
                width: 4
              }
            ]
          } %>
        <% end %>
      </div>
      <div class="govuk-grid-column-one-half">
        <%= render "govuk_publishing_components/components/fieldset", {
          legend_text: "To time",
          heading_size: "m"
        } do %>
          <%= render "time_input", {
            hint: "For example, 9:30 or 19:30",
            items: [
              {
                name: "downtime[end_time(4i)]",
                label: "Hour",
                width: 2
              },
              {
                name: "downtime[end_time(5i)]",
                label: "Minute",
                width: 2
              }
            ]
          } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= render "govuk_publishing_components/components/textarea", {
      label: {
        heading_size: "l",
        text: "Message"
      },
      hint: "Message is auto-generated once a schedule has been made.",
      name: "downtime[message]"
    } %>
  </div>
</div>

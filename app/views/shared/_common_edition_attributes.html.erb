<%= hidden_field_tag "return_to", params[:return_to] if params[:return_to] %>
<div class="row form-group">
  <div class="col-md-3">
    <label for="edition_assigned_to_id">Assigned to</label>
    <%= f.collection_select :assigned_to_id, User.order_by([[:name, :asc]]).all, :id, :name, {:prompt => "Select someone"}, {:class => 'form-control', :disabled => @resource.locked_for_edits?, "data-module" => 'assignee-select'} %>
  </div>
</div>
<div class="row">
  <div class="col-md-7">
  <%= f.input :title,
        :input_html => { :autofocus => true, :disabled => @resource.locked_for_edits? } %>

  <%= f.input :in_beta,
        as: :boolean,
        label: 'Content is in beta',
        hint: raw("A beta label will show beneath the title with a link to " +
          link_to('beta services on GOV.UK', 'https://www.gov.uk/help/beta', class: 'link-inherit')),
        input_html: { disabled: @resource.locked_for_edits? },
        wrapper_html: { class: "form-group add-bottom-margin" } %>

  <%= f.input :alternative_title,
        :label => 'Alternative title',
        :hint => 'Use this where longer title is needed for SEO purposes',
        :input_html => { :autofocus => true, :disabled => @resource.locked_for_edits? } %>
  </div>
  <div class="col-md-10">
    <%= f.input :overview,
          :as => :text,
          :label => 'Meta tag description',
          :hint => 'Some search engines will display this if they can&rsquo;t find what they need in the main text',
          :input_html => { :rows => 3, :disabled => @resource.locked_for_edits? } %>
  </div>

  <div class="col-md-8 form-group">
    <%= f.label :browse_pages %>
    <p class="help-block">
      The first section will be the primary section the content lives in.
      This will form the content breadcrumb.
    </p>
    <%= f.select :browse_pages,
                    browse_options_for_select(Collections.grouped_mainstream_browse_pages),
                    {},
                    { multiple: true,
                      class: 'select2',
                      data: { placeholder: 'Choose mainstream browse pages…' } } %>
  </div>

  <div class="col-md-8 form-group">
    <%= f.label :primary_topic %>
    <%= f.select :primary_topic,
                    browse_options_for_select(Collections.grouped_topics),
                    { include_blank: true },
                    { class: 'select2',
                      data: { placeholder: 'Choose primary topic…' } } %>
  </div>

  <div class="col-md-8 form-group">
    <%= f.label :additional_topics %>
    <%= f.select :additional_topics,
                    browse_options_for_select(Collections.grouped_topics),
                    {},
                    { multiple: true,
                      class: 'select2',
                      data: { placeholder: 'Choose additional topics…' } } %>
  </div>
</div>
